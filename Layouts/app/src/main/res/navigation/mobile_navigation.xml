<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.cursoant.android.layouts.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_linear" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.cursoant.android.layouts.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_frame" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.cursoant.android.layouts.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_constraint" />

    <fragment
        android:id="@+id/navigation_task"
        android:name="com.cursoant.android.layouts.ui.notifications.NotificationsFragment"
        android:label="@string/title_task"
        tools:layout="@layout/fragment_task" />
</navigation>